{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNEXT"],
    "baseUrl": "./src",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts", "src/*/*.ts", "tests/*.ts"]
}
